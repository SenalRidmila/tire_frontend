{
  "rewrites": [
    { 
      "source": "/api/auth/(.*)", 
      "destination": "https://tire-backend-58a9.onrender.com/api/auth/$1"
    },
    { 
      "source": "/api/employees/(.*)", 
      "destination": "https://tire-backend-58a9.onrender.com/api/employees/$1"
    },
    { 
      "source": "/api/send-email", 
      "destination": "https://tire-backend-58a9.onrender.com/api/send-email"
    },
    { 
      "source": "/api/notifications/(.*)", 
      "destination": "https://tire-backend-58a9.onrender.com/api/notifications/$1"
    },
    { 
      "source": "/api/mail/(.*)", 
      "destination": "https://tire-backend-58a9.onrender.com/api/mail/$1"
    },
    { 
      "source": "/api/tire-requests/(.*)", 
      "destination": "https://tire-backend-58a9.onrender.com/api/tire-requests/$1"
    },
    { 
      "source": "/api/tire-requests", 
      "destination": "https://tire-backend-58a9.onrender.com/api/tire-requests"
    },
    { 
      "source": "/api/tire-orders/(.*)", 
      "destination": "https://tire-backend-58a9.onrender.com/api/tire-orders/$1"
    },
    { 
      "source": "/api/tire-orders", 
      "destination": "https://tire-backend-58a9.onrender.com/api/tire-orders"
    },
    { 
      "source": "/uploads/(.*)", 
      "destination": "https://tire-backend-58a9.onrender.com/uploads/$1"
    },
    { 
      "source": "/images/(.*)", 
      "destination": "/images/$1"
    },
    { "source": "/(.*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
      ]
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://tire-backend-58a9.onrender.com"
  }
}

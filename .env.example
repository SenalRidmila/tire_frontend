# Azure AD Configuration
# Replace these values with your actual Azure App Registration details

# Azure AD Application (Client) ID
REACT_APP_AZURE_CLIENT_ID=your-azure-app-client-id

# Azure AD Directory (Tenant) ID or use 'common' for multi-tenant
REACT_APP_AZURE_AUTHORITY=https://login.microsoftonline.com/your-tenant-id

# Redirect URI after successful login
REACT_APP_REDIRECT_URI=https://tire-frontend.vercel.app/home

# Authentication mode: 'azure_ad', 'mongodb', or 'demo'
REACT_APP_AUTH_MODE=mongodb

# Backend API URL
REACT_APP_API_BASE_URL=https://tirebackend-production.up.railway.app

# Enable/disable authentication mode selector in login
REACT_APP_SHOW_AUTH_SELECTOR=true